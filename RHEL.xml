<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="RHEL.lua" />
	<Frame name="RHEL_MiniFrame" parent="UIParent" movable="true" enableMouse="true">
		<Size>
			<AbsDimension x="160" y="240" />
		</Size>
		<Anchors>
			<Anchor point="LEFT" x="0" y="0" />
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="2" right="2" top="2" bottom="2" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="10" />
			</EdgeSize>
		</Backdrop>	
		<Frames>
			<Frame name="RHEL_TOPFrame" parent="RHEL_MiniFrame" movable="false" enableMouse="true">
				<Size>
					<AbsDimension x="160" y="25" />
				</Size>
				<Anchors>
					<Anchor point="TOP" x="0" y="0" />
				</Anchors>
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="true">
					<BackgroundInsets>
						<AbsInset left="2" right="2" top="2" bottom="2" />
					</BackgroundInsets>
					<TileSize>
						<AbsValue val="32" />
					</TileSize>
					<EdgeSize>
						<AbsValue val="10" />
					</EdgeSize>
				</Backdrop>
				<Layers>
					<Layer level="OVERLAY">
						<FontString inherits="GameFontNormalSmall" text="123werwerwerwerwerx">
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="10" y="0" />
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="BossNameDropdown" inherits="UIDropDownMenuTemplate" id="1">
				<Size x="44" y="30" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="-40" />
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString inherits="GameFontNormalSmall" text="x">
							<Anchors>
								<Anchor point="TOP">
									<Offset>
										<AbsDimension x="10" y="15" />
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						UIDropDownMenu_Initialize(BossNameDropdown, RHEL_BossNameDropdown_OnLoad);
					</OnLoad>
				</Scripts>
			</Frame>
			<Button name="Heals" inherits="UIPanelButtonTemplate" text="Heal">
				<Size x="50" y="30" />
				<Anchors>
					<Anchor point="BOTTOM" x="-50" y="6" />
				</Anchors>
				<Scripts>
					<OnClick>
						RHEL_HealAnounce();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="Buffs" inherits="UIPanelButtonTemplate" text="Buff">
				<Size x="50" y="30" />
				<Anchors>
					<Anchor point="BOTTOM" x="0" y="6" />
				</Anchors>
				<Scripts>
					<OnClick>
						RHEL_BuffAnounce();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="Dispells" inherits="UIPanelButtonTemplate" text="Disp">
				<Size x="50" y="30" />
				<Anchors>
					<Anchor point="BOTTOM" x="50" y="6" />
				</Anchors>
				<Scripts>
					<OnClick>
						RHEL_DispellAnounce();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="PanelCloseButton" inherits="UIPanelCloseButton" text="Close">
				<Anchors>
					<Anchor point="TOPRIGHT" x="3" y="3" />
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():Hide();
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnMouseDown>
				RHEL_OnMouseDown(self);
			</OnMouseDown>
			<OnMouseUp>
				RHEL_OnMouseUp(self);
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>